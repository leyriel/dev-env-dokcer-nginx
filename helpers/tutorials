# Combine pem files for haproxy cert format
DOMAIN='atelier-bee.fr' sudo -E bash -c 'cat /home/env/email-sever/etc/live/atelier-bee.fr/fullchain.pem /home/env/email-sever/etc/live/atelier-bee.fr/privkey.pem > <pathTOSaveNewFileCombined>'

# Combine pem files for haproxy cert format-->webrise.fr
DOMAIN='webrise.fr' sudo -E bash -c 'cat /home/env/dev-env-dokcer-nginx/etc/letsencrypt/live/webrise.fr/fullchain.pem /home/env/dev-env-dokcer-nginx/etc/letsencrypt/live/webrise.fr/privkey.pem > webrise.pem'

